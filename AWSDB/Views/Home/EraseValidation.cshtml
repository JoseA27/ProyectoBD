
@model CombinedViewModel

<h2>Borrar Articulo</h2>

<form asp-controller="Article" asp-action="EraseValidation" method="post">

    <div class="form-group">
        <label asp-for="NewArticulo.Codigo">Inserte Codigo</label>
        <input asp-for="NewArticulo.Codigo" class="form-control" />
    </div>

    <button asp-action="validarBorrar" type="submit" class="btn btn-primary">Ok</button>
    <button asp-action="VolverErase" type="submit" class="btn btn-primary">Cerrar</button>
    <div class="form-group" style="display:none;">
        <label asp-for="UserName">@Model.UserName</label>
        <input asp-for="UserName" class="form-control" />
    </div>
</form>
@if (TempData["Message"] != null)
{
    <script>
        alert('@TempData["Message"]');
    </script>
}