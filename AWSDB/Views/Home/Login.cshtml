@model Usuario

<h2>Log In</h2>

<form asp-controller="Home" asp-action="Login" method="post">

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>

    <button asp-action="Ingresar" type="submit" class="btn btn-primary">Ingresar</button>
    <button asp-action="VistaUpload" type="submit" class="btn btn-primary">Subir Archivo</button>

</form>
@if (TempData["Message"] != null)
{
    <script>
        alert('@TempData["Message"]');
    </script>
}